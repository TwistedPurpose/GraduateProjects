@{
    ViewBag.Title = "Index";
}

@Html.Raw(HttpUtility.JavaScriptStringEncode(Url.Content("~"), true));
<div>
    <table>
        <thead>
            <tr>
                <th>Campaign Name</th>
                <th>History</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:campaignList">
            <tr>
                <td>
                    <a data-bind="attr: { href:'@Url.RouteUrl("Default", new { controller = "Hub", id = 5 })', value: name }">
                        <span data-bind="text: name" />
                    </a>
                </td>
                <td data-bind="text:history"></td>
            </tr>
        </tbody>

    </table>

    <div>
        <textarea data-bind="value:newCampaginName"></textarea>
        <textarea data-bind="value:newCampaginHistory"></textarea>

        <button data-bind="click:addCampagin">Add Campaign</button>
    </div>


</div>
@Scripts.Render("~/bundles/campaign")