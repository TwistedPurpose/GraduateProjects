
@{
    ViewBag.Title = "Session Managment";
}

<div class="row">
    <div class="col-sm-12">
        <h2>Session Managment</h2>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <select data-bind="options: CampaignList,
                   optionsText: function(campaign) { return campaign.Name; },
                   value: CurrentCampaign"></select>
    </div>
</div>

<div class="row" data-bind="foreach:SortedSessionList">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-1">
                <input class="planner-modal-input-value" data-bind="value: SessionNumber" />
            </div>

            <div class="col-sm-11">
                <span data-bind="text:Title"></span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <button data-bind="click:save">Save</button>
    </div>
</div>

@Scripts.Render("~/bundles/sessionManagement")