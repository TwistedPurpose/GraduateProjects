
@{
    ViewBag.Title = "Hub";
}

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCBLS0MX9AwHUlg0Zkvodyp3sjDPdrrB9c"></script>
@Scripts.Render("~/bundles/maps")

<div class="container-fluid">
    <form>
        <div class="row">
            <div class="col-md-12">
                <textarea style="" rows="12"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-8 map">
                <div class="google-map-canvas" id="map">
                </div>
            </div>

            <div class="col-sm-4">

                <div class="row">
                    <div class="col-sm-4">
                        <button class="btn btn-default">Upload Map</button>

                        <button class="btn btn-default">Set Root Map</button>

                    </div>


                </div>

                <div class="row">
                    <div class="col-sm-4">
                        <button class="btn btn-default">Add Character</button>
                        <div>
                            <ul>
                                <li>Character Name</li>
                            </ul>
                        </div>
                    </div>


                </div>

                <div class="row">
                    <div class="col-sm-4">
                        <button class="btn btn-default">Add An Item</button>
                        <div>
                            <ul>
                                <li>Cha</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



<script>
    var map;
    map = new GMaps({
        div: '#map',
        lat: 52.4801,
        lng: -1.8835,
        width: '100%',
        height: '500px',
        zoom: 7
    });

    map.setContextMenu({
        control: 'map',
        options: [{
            title: 'Add marker',
            name: 'add_marker',
            action: function (e) {
                this.addMarker({
                    lat: e.latLng.lat(),
                    lng: e.latLng.lng(),
                    title: 'New marker'
                });
            }
        }, {
            title: 'Center here',
            name: 'center_here',
            action: function (e) {
                this.setCenter(e.latLng.lat(), e.latLng.lng());
            }
        }]
    });
</script>


