<div class="modal fade plannter-modal" id="addEditCampaignModal" data-bind="modal: showAddEditCampaignModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create/Edit A Character</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-bind="with: addEditCampaignVM">
                <div class="row">
                    <div class="col-md-12">Name</div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <input data-bind="value:Name" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">History</div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <textarea  data-bind="textInput:History"></textarea>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:saveCampaign">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


