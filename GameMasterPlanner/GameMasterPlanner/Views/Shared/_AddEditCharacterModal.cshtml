<div class="modal fade planner-modal" id="addCharacterModal" data-bind="modal: showAddEditCharacterModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create/Edit A Character</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-bind="with: addEditCharacterVM">
                <div>Name</div>
                <input data-bind="textInput:Name" />
                <div>Description</div>
                <textarea data-bind="textInput:CharDescription"></textarea>
                <div>Notes</div>
                <textarea data-bind="textInput:Notes"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:saveCharacter">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


