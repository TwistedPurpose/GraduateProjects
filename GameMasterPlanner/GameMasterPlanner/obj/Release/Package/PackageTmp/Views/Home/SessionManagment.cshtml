
@{
    ViewBag.Title = "Session Managment";
}

<h2>Session Managment</h2>

<div class="row">
    <select data-bind="options: CampaignList,
                   optionsText: function(campaign) { return campaign.Name; },
                   value: CurrentCampaign"></select>
</div>

<div class="row" data-bind="foreach:SortedSessionList">
    <div class="row">
        <div class="col-md-2">
            <input data-bind="value: SessionNumber" />
        </div>

        <div class="col-md-10">
            <span data-bind="text:Title"></span>
        </div>
    </div>
</div>
