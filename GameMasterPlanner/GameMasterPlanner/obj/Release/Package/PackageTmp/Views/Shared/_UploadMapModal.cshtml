<div class="modal fade" data-bind="modal: uploadMapModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload A Map</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-bind="with: mapVM">
                <div class="row">
                    <div class="col-md-12">
                        Name
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <input data-bind="textInput:Name" />
                    </div>
                </div>
                <div class="row" data-bind="with: uploader">
                    <div class="col-md-12">
                        <input type="file"
                               data-bind="file: {data: fileInput, name: fileName, reader: reader}" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click:saveMap">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>